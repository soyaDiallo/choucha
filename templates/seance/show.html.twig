{% extends 'base.html.twig' %}

{% block title %}Seance{% endblock %}

{% block body %}
    <h1>Seance {{ seance.num }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seance.id }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ seance.num }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ seance.type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ seance.date ? seance.date|date('Y-m-d H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('seance_index') }}">liste des seances</a>

    <a href="{{ path('seance_edit', {'id': seance.id}) }}">Modifier</a>

    {{ include('seance/_delete_form.html.twig') }}
{% endblock %}
