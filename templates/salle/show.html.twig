{% extends 'base.html.twig' %}

{% block title %}Salle{% endblock %}

{% block body %}
    <h1>Salle {{ salle.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ salle.id }}</td>
            </tr>
            <tr>
                <th>Num</th>
                <td>{{ salle.num }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ salle.nom }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ salle.capacite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('salle_index') }}">Liste des salles</a>

    <a href="{{ path('salle_edit', {'id': salle.id}) }}">Modifier</a>

    {{ include('salle/_delete_form.html.twig') }}
