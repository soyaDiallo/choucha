{% extends 'base.html.twig' %}

{% block title %}Etudiant{% endblock %}

{% block body %}
    <h1>Etudiant {{ etudiant.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etudiant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ etudiant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ etudiant.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ etudiant.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ etudiant.adresse }}</td>
            </tr>
            <tr>
                <th>Classe</th>
                <td>{{ etudiant.classe }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('etudiant_index') }}">Liste des etudiants</a>

    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">Modifier</a>

    {{ include('etudiant/_delete_form.html.twig') }}
{% endblock %}
