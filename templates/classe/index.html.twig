{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    <h1>Liste des Classes</h1>

    <a href="{{ path('classe_new') }}">Ajouter</a>
    <hr></hr>
    <table class="table" border=1>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.nom }}</td>
                <td>
                    <a href="{{ path('classe_show', {'id': classe.id}) }}">Voir</a>
                    <a href="{{ path('classe_edit', {'id': classe.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
